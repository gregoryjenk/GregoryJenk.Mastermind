{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": false,
    "target": "es6",
    "types": [
      "jasmine"
    ],
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  //Either the exclude or files properties can be used, but not both, files takes priority.
  "files": [
    "karma.conf.ts"
  ]
}